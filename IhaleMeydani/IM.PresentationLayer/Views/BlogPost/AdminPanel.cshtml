@model IM.PresentationLayer.Models.BlogModelView

@{
    ViewBag.Title = "AdminPanel";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}


<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Good Morning Jason!</h3>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="index.html">auction</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="index.html">YayımlananAraçlar</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="col-5 align-self-center">
            <div class="customize-input float-right">
                <select class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius">
                    <option selected>Aug 19</option>
                    <option value="1">July 19</option>
                    <option value="2">Jun 19</option>
                </select>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    @* arasına yazılacak*@



    <p>
        @Html.ActionLink("Create New", "Create", "BlogAdmin")
    </p>
    <table class="table">
        <tr>
            <th>
                post date
            </th>
            <th>
                image name
            </th>
            <th>
                image path
            </th>
            <th>
                image subtitle
            </th>
            <th>
                image title
            </th>
            <th>
                sumbit aricte
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Posts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Post_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image_path)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image_subtitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image_title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.submit_article)
                </td>
                <td>
                    <a href="@Url.Action("Update","BlogAdmin"  )/@item.Post_id" class="btn btn-warning">Edit</a> |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

    </table>
</div>