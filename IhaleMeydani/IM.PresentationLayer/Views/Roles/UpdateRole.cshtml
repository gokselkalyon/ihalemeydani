@model IM.PresentationLayer.Models.RolesModelView
@{
    ViewBag.Title = "UpdateRole";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Good Morning Jason!</h3>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="index.html">auction</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="index.html">YayımlananAraçlar</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="col-5 align-self-center">
            <div class="customize-input float-right">
                <select class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius">
                    <option selected>Aug 19</option>
                    <option value="1">July 19</option>
                    <option value="2">Jun 19</option>
                </select>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })

    @using (Ajax.BeginForm("RoleUpdate", "Roles", FormMethod.Post, new AjaxOptions()
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        OnSuccess = "returnPostJson(data)",
        LoadingElementId = "loading-background",
    },
                    new
                    {
                        @class = "UpdateRoleForm",
                        @id = "frmUpdateRoleForm",
                        @name = "frmUpdateRoleForm",
                    }))
    {
        @Html.AntiForgeryToken()
        <div style="margin-left:40%; width:230px;margin-top:20px;">
            <input type="text" value="@Model.Id" name="Id"  hidden/>
            <div class="form-group">
                <label for="inputName" class="control-label mb-10">Rol Adı</label>
                <input type="text" class="form-control" name="RoleName" value="@Model.RoleName" required="">
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div style="margin-top:20px;">
            @for (int i = 0; i < Model.roleList.Count; i++)
            {
                <div class="col-md-3">
                    @Html.HiddenFor(m => m.roleList[i].ClaimId)
                    <div style="height:60px; width:300px; margin-top:00px;">
                        <div class="input-group" style="color:black;">
                            @Html.CheckBoxFor(m => m.roleList[i].Checked) @Model.roleList[i].Text
                        </div>
                    </div>
                </div>
            }
            <div class="form-group">
                <a type="button" href="/Roles/index" style="width:100px; float:right; margin-top:20px;" class="btn btn-danger">Vazgeç</a>
                <button type="submit" style="width:100px; float:right; margin-top:20px; margin-right:5%;" class="btn btn-success btn-anim"><i class="icon-rocket"></i><span class="btn-text">Kaydet</span></button>
            </div>
        </div>
    }
</div>

  
