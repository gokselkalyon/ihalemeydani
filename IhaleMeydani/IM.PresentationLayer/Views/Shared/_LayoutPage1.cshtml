<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Template/css/boostrap.css" rel="stylesheet" />
    <link href="~/Content/Template/css/StyleSheet1.css" rel="stylesheet" />
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>

    <script src="~/Content/Template/js/jquery.js"></script>
    <script src="~/Content/Template/js/boostrap.js"></script>
</head>
<body>
    <div class="top-header">
        <div class="container-fluid" style="width:100%;height:40px;background-color:ghostwhite;">
            <div class="row">
                <div class="col-7">
                    <ul class="currency-language">
                        <li class="border-right">
                            TR
                            <i class="fas fa-angle-down"></i>
                            <ul class="shadow-sm p-3 mb-5 bg-white rounded">
                                <li>TR</li>
                                <li>EN</li>
                                <li>GE</li>
                            </ul>
                        </li>
                        <li>
                            TRY
                            <i class="fas fa-angle-down"></i>
                            <ul class="shadow-sm p-3 mb-5 bg-white rounded">
                                <li>TRY</li>
                                <li>USD</li>
                                <li>EU</li>
                            </ul>
                        </li>
                        <li>
                            <p>Call us toll free: +1-541-754-3010</p>
                        </li>
                        <li>
                            <span>Send us an email: contact@example.com</span>
                        </li>
                    </ul>
                </div>
                <div class="account-urls col-5 text-right">
                    <a href="#" class="m-3"><i class="fas fa-truck"></i>&nbsp; Order Tracking</a>
                    <a href="#"><i class="far fa-heart"></i>&nbsp; Wishlist</a>
                </div>
            </div>
            <div class="row bg-light d-flex align-content-center p-0" style="height:168px;">
                <div class="navbar-logo col-2">
                    <img class="img-fluid" src="~/Content/Images/logo.png" />
                </div>
                <div class="col-6 offset-1 align-self-center" style="height:50px">
                    <div class="container h-100">
                        <div class="d-flex justify-content-center h-100">
                            <div class="searchbar shadow">
                                <input class="search_input" type="text" name="" placeholder="Search...">
                                <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Sign-in col-2 align-self-center offset-1">
                    <a href="#"><i class="fas fa-sign-in-alt"></i>&nbsp; Sign In</a>
                </div>
            </div>
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>


</body>
</html>
