@model IM.PresentationLayer.Models.UserModelView
@{
    ViewBag.Title = "UserRoleUpdate";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-7 align-self-center">
            <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Good Morning Jason!</h3>
            <div class="d-flex align-items-center">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="index.html">auction</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="index.html">YayımlananAraçlar</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="col-5 align-self-center">
            <div class="customize-input float-right">
                <select class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius">
                    <option selected>Aug 19</option>
                    <option value="1">July 19</option>
                    <option value="2">Jun 19</option>
                </select>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-8" style="margin-top:20px;">
            <input type="hidden" class="form-control" name="personelModelEdit.Id" id="inputName" value="@Model.userModel.Id" disabled>

            <div class="form-group">
                <label for="inputName" class="control-label mb-10">Ad</label>
                <input type="text" class="form-control" name="personelModelEdit.NameEdit" id="inputName" value="@Model.userModel.Name" disabled>
            </div>
            <div class="form-group">
                <label for="inputName" class="control-label mb-10">Soyad</label>
                <input type="text" class="form-control" name="personelModelEdit.Mission" id="Mission" value="@Model.userModel.Surname" disabled>

            </div>
            <div class="form-group">
                <label style="color:black;" class="control-label mb-10">Kullanıcı Adı</label>
                <input type="text" maxlength="250" class="form-control" name="personelModelEdit.UserNameEdit" value="@Model.userModel.Username" disabled>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="control-label mb-10">Telefon Numarası</label>
                <input name="personelModelEdit.Password" value="@Model.userModel.Phone" class="form-control" id="inputPassword" disabled>

            </div>
            <div class="form-group">
                <label for="inputName" class="control-label mb-10">Email</label>
                <input type="text" class="form-control" value="@Model.userModel.Email" disabled>

            </div>
            <div class="form-group">
                <label for="inputName" class="control-label mb-10">Adres</label>
                <input type="text" maxlength="250" class="form-control" value="@Model.userModel.Adress" id="Adress" disabled>

            </div>
            <div class="form-group">
                <label for="inputEmail" class="control-label mb-10">Doğum Tarihi</label>
                <input type="email" class="form-control" name="personelModelEdit.Email" id="Email" value="@Model.userModel.DateOfBirt" disabled />
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="col-md-4 mt-5">
            @using (Html.BeginForm("RoleUpdate", "User", FormMethod.Post))
            {
                <h3>Kullanıcı Durumu</h3>
                <div>
                    @Html.HiddenFor(model => model.userModel.Id, new { htmlAttributes = new { @class = "form-control" } })
                    @for (int i = 0; i < Model.roleModelList.Count; i++)
                    {
                        @Html.HiddenFor(m => m.roleModelList[i].RoleId)
                        @Html.CheckBoxFor(m => m.roleModelList[i].Checked) @Model.roleModelList[i].Text
                        <br />
                    }
                    <div class="form-group">
                        <div class="form-group">
                            <button type="submit" style="width:100px; float:right; margin-top:20px; margin-right:70%;" class="btn btn-success btn-anim"><i class="icon-rocket"></i><span class="btn-text">Kaydet</span></button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
