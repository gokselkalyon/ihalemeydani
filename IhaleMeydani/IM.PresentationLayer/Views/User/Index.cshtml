@model IM.PresentationLayer.Models.UserModelView 
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
    }

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-7 align-self-center">
                <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Good Morning Jason!</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="index.html">auction</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="index.html">YayımlananAraçlar</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-5 align-self-center">
                <div class="customize-input float-right">
                    <select class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius">
                        <option selected>Aug 19</option>
                        <option value="1">July 19</option>
                        <option value="2">Jun 19</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row mt-4">
            <div class="col-12">
                <table class="bg-white" id="table"
                       data-show-toggle="true"
                       data-show-pagination-switch="true"
                       data-show-refresh="true"
                       data-search="true"
                       data-pagination="true"
                       data-key-events="true"
                       data-show-print="true"
                       data-search-align="left"
                       data-select-item-name="id"
                       data-show-search-clear-button="true"
                       data-show-fullscreen="true"
                       data-show-columns="true">
                    <thead>
                        <tr>
                            <th data-field="id" data-sortable="true" data-width="50%">ID</th>
                            <th data-field="Name" data-sortable="true">Adı</th>
                            <th data-field="Surname" data-sortable="true">Soyadı</th>
                            <th data-field="Username" data-sortable="true">Kullanıcı Adı</th>
                            <th data-field="Adress" data-sortable="true">Adresi</th>
                            <th data-field="CompanyName" data-sortable="true">Şirket Adı</th>
                            <th data-field="Email" data-sortable="true">Email</th>
                            <th data-field="DateOfBirt" data-sortable="true">Doğum Tarihi</th>
                            <th data-field="Phone" data-sortable="true">Telefon Numarası</th>
                            <th data-field="IsDeleted" data-sortable="true">Engellendi mi?</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.userModel)
                        {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Username</td>
                            <td>@item.Adress</td>
                            <td>@item.CompanyName</td>
                            <td>@item.Email</td>
                            <td>@item.DateOfBirt</td>
                            <td>@item.Phone</td>  
                            @if (item.IsDeleted == true)
                            {
                                <td id="deleted">Evet</td>
                            }
                            else
                            {
                                <td id="deleted">Hayır</td>
                            }

                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    @if (item.IsDeleted == true)
                                    {
                                        <button type="button"  data-bind="@item.IsDeleted" class="btn btn-danger block-user" id="@item.Id" data-id="@item.Id">Engeli Kaldır</button>
                                    }
                                    else
                                    {
                                        <button type="button" data-bind="@item.IsDeleted" class="btn btn-danger block-user" id="@item.Id" data-id="@item.Id">Engelle</button>
                                    }
                                </div>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="/Roles/UpdateRole/@item.Id" class="btn btn-secondary">Yetki Ata</a>
                                </div>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
