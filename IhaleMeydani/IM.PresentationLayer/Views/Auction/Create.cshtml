@model IM.PresentationLayer.Models.AuctionModelView

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UserAuctionModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.auction.ACUTION_SALES_TIME, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.auction.ACUTION_SALES_TIME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.auction.ACUTION_SALES_TIME, "", new { @class = "text-danger" })
        </div>
    </div>

    <select name="auction.userproductID" class="form-control" id="exampleFormControlSelect1">
        <option>Seçiniz...</option>
        @foreach (var item in Model.userProductModels)
        {
            <option value="@item.id">@item.LicancePlate</option>
        }
    </select>
    <select name="auction.CURRENCY_ID" class="form-control" id="exampleFormControlSelect1">
        <option>Seçiniz...</option>
        @foreach (var item in Model.currencies)
        {
            <option value="@item.ID">@item.NAME</option>
        }
    </select>


    <div class="form-group">
        @Html.LabelFor(model => model.auction.INCREASE_PRICE, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.auction.INCREASE_PRICE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.auction.INCREASE_PRICE, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.auction.MAX_PRICE, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.auction.MAX_PRICE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.auction.MAX_PRICE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.auction.MIN_PRICE, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.auction.MIN_PRICE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.auction.MIN_PRICE, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
